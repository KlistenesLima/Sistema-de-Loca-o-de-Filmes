@model FilmeModel
@{
    ViewData["Title"] = "Editar filme";
}

<div class="text-center">

    <h1 class="display-4">Editar filme</h1>

</div>
<form asp-controller="Filme" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="nome">Título:</label>
        <input type="text" asp-for="Titulo" class="form-control" placeholder="Digite o nome do cliente">
        @Html.ValidationMessageFor(x => x.Titulo)
    </div>
    <div class="form-group">
        <label for="nome">Classificação Indicativa:</label>
        <input type="number" asp-for="ClassificacaoIndicativa" class="form-control" placeholder="Digite o e-mail do cliente">
        @Html.ValidationMessageFor(x => x.ClassificacaoIndicativa)
    </div>
   <div class="form-group">
        <label for="nome">Lançamento:  </label>
        @Html.RadioButtonFor(model => model.Lancamento, true) SIM
        @Html.RadioButtonFor(model => model.Lancamento, false) NÂO 
        @Html.ValidationMessageFor(x => x.Lancamento)
    </div> 
    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Filme" asp-action="Index" role="button">Voltar</a>

</form>

