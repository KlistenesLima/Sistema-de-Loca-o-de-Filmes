@model FilmeModel
@{
    ViewData["Title"] = "Confirmação de apagar o filme?";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato(@Model.Titulo)</h3>
</div>
<a class="btn btn-primary btn-block" role="button" asp-controller="Filme" asp-action="Index" >Cancelar exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Filme" asp-route-id="@Model.Id" asp-action="Apagar" >Confirmar exclusão</a>