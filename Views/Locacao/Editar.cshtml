@model ClienteModel
@{
    ViewData["Title"] = "Editar cliente";
}

<div class="text-center">

    <h1 class="display-4">Editar cliente</h1>

</div>
<form asp-controller="Cliente" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do cliente">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="nome">E-mail</label>
        <input type="text" asp-for="CPF" class="form-control" placeholder="Digite o e-mail do cliente">
        @Html.ValidationMessageFor(x => x.CPF)
    </div>
    <div class="form-group">
        <label for="nome">Celular</label>
        <input type="text" asp-for="DataNascimento" class="form-control" placeholder="Digite o celular do cliente">
        @Html.ValidationMessageFor(x => x.DataNascimento)
    </div> 
    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Cliente" asp-action="Index" role="button">Voltar</a>
</form>

